{% for user in users %}
{% if user.state is defined and user.state == 'absent' %}
no username {{ user.name}}
{% else %}
{% if user.password is not defined %}
username {{ user.name }} nopassword
{% elif user.password %}
username {{ user.name }} secret {{ user.password }}
{% endif %}
{% if user.role is defined %}
username {{user.name}} role {{ user.role }}
{% endif %}
{% if user.privilege is defined %}
username {{ user.name }} privilege {{ user.privilege }}
{% endif %}
{% if user.sshkey is defined %}
username {{ user.name}} sshkey {{ user.sshkey }}
{% endif %}
{% endif %}
{% endfor %}

